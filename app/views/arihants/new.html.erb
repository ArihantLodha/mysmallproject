<h1>Create an Arihant</h1>

 <% if @arihant.errors.any? %>
 <h2>The following error prevented the article from getting created</h2>
<ul>
 <% @arihant.errors.full_messages.each do |msg| %>
 <li><%= msg %></li>
 <% end %>
 </ul>
 <% end %>




<%= form_for @arihant do |f| %>
<p>
 <%= f.label :Name %><br/>
 <%= f.text_field :Name %>
</p>

<p> 
<%= f.label :Division %><br/>
<%= f.text_area :Division %>
</p>


<p> 
<%= f.label :Date %><br/>
<%= f.text_field :Created %>
</p>

<p> 
<%= f.submit %>
</p>
<% end %>