<% obj.each do|record| %>
   
<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
            <div class="article-title ">
             <td align= "left"> <%= link_to record.Name , arihant_path(record) %>  </td>
             <td align="right"><%= record.Created %></td>
            </div>
            <div class="article-body">
               <td><%= record.Division %></td>
              <div class="article-meta-details">
               <small>Created By:<%= record.user.username if record.user %> ,
               <%= time_ago_in_words(record.created_at) %> ago, last updated: <%= time_ago_in_words(record.updated_at) %> ago</small>
            </div>
              </div>
              <div class="margin-top">
              <%= link_to 'Delete the Articles', arihant_path(record),method: :delete,
                         data: {confirm: "Are you sure you want to delete the data?"} ,
                         class: "btn btn-xs btn-danger" %>
              <%= link_to 'Edit the Articles', edit_arihant_path(record),class: "btn btn-xs btn-primary" %>   
            </div>
        </div>
        
    </div>
</div>
<% end %>