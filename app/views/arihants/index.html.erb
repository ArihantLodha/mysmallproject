<h1>Listing all articles.</h1>
<%= link_to "Create new article",new_arihant_path %>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Division</th>
        <th>Created Date</th>
    </tr>
    <% @allrecords.each do|record| %>
    <tr>
        <td><%= record.id %></td>
        <td><%= record.Name %></td>
        <td><%= record.Division %></td>
        <td><%= record.Created %></td>
        <td><%= link_to "Edit", edit_arihant_path(record) %></td>
        <td>|</td>
        <td><%= link_to "Show", arihant_path(record) %></td>
        <td>|</td>
        <td>
            <%= link_to "Delete", arihant_path(record), method: :delete, data: {confirm: " Are you sure ?"} %>
        </td>
    </tr>
    <% end %>
</table>