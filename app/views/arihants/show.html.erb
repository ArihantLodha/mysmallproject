<h2 class="center">Title: <%= @arihant.Name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
     <h4 align: Right> <strong>Created Date:</strong><%= @arihant.Created %></h4>
   <div align="center">

     <ul class="listing">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
            <li>Created by:</li>
             <li> <%= link_to gravatar_for(@arihant.user), user_path(@arihant.user)  %> </li>   
             <li class="article_title">
                <%= link_to @arihant.user.username, user_path(@arihant.user)  %>
             </li>
             <li>
                <small><%= pluralize(@arihant.user.arihants.count,"article") if @arihant.user.arihants %></small>
             </li>            
            </div>
        </div>
        </div>
     </ul>
    <h4 class="center"> <strong>Division:</strong></h4>
    <hr>
    <%= simple_format(@arihant.Division) %>
    <div class="article-actions">
        <%= link_to 'View all Articles', arihants_path,class: "btn btn-xs btn-success" %>
        <% if logged_in? &&  current_user = @arihant.user %>
        <%= link_to 'Delete the Articles', arihant_path(@arihant),method: :delete,
                         data: {confirm: "Are you sure you want to delete the data?"} ,
                         class: "btn btn-xs btn-danger" %>
        <%= link_to 'Edit the Articles', edit_arihant_path(@arihant),class: "btn btn-xs btn-primary" %>
        <% end %>
        
    </div>    
</div>

