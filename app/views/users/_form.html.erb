<%= render 'shared/errors', obj: @user %>

<div class='row'>
 <div class='col-md-12'>
 
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"})  do |f|  %>
<div class="form-group">
 <div class="col-sm-2 control-label" >
  <%= f.label :username  %>
 </div>
 <div class="col-sm-8">
  <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
 </div>
</div>


<div class="form-group">
 <div class="col-sm-2 control-label" >
  <%= f.label :email %>
 </div>
 <div class="col-sm-8">
  <%= f.email_field :email , class: "form-control", placeholder: "Enter email" %>
 </div>
</div>

<div class="form-group">
 <div class="col-sm-2 control-label" >
  <%= f.label :password  %>
 </div>
 <div class="col-sm-8">
  <%= f.password_field :password  , class: "form-control", placeholder: "Enter passoword"  %>
 </div>
</div>


<div class="form-group">
 <div class="col-sm-offset-2 col-sm-2" >
 <div class="col-sm-2 btn-submit">
  <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary btn-lg") %>
 </div>
</div>
</div>
  <% end %>
<div align="center",class: "btn btn-primary btn-lg">
 [<%= link_to 'Back', root_path %>]
</div>
 

 </div>
</div>

 
